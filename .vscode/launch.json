  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug-mocha",
        "--",
        "--verbose"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Quick",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug-mocha",
        "--",
        "--quick",
        "--verbose"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}